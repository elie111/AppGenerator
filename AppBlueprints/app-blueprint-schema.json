{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "metadata",
        "app"
    ],
    "properties": {
        "metadata": {
            "type": "object",
            "required": [
                "appName",
                "firebaseConfig"
            ],
            "properties": {
                "appName": {
                    "type": "string"
                },
                "firebaseConfig": {
                    "type": "object",
                    "required": [
                        "apiKey",
                        "authDomain",
                        "projectId",
                        "storageBucket",
                        "messagingSenderId",
                        "appId",
                        "measurementId"
                    ],
                    "properties": {
                        "apiKey": {
                            "type": "string"
                        },
                        "authDomain": {
                            "type": "string"
                        },
                        "projectId": {
                            "type": "string"
                        },
                        "storageBucket": {
                            "type": "string"
                        },
                        "messagingSenderId": {
                            "type": "string"
                        },
                        "appId": {
                            "type": "string"
                        },
                        "measurementId": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "app": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z0-9_]+$": {
                            "$ref": "#/definitions/component"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "component": {
            "type": "object",
            "required": [
                "tag",
                "styles",
                "children",
                "params"
            ],
            "properties": {
                "tag": {
                    "type": "string",
                    "enum": [
                        "button",
                        "card",
                        "dropdown",
                        "dynamicLayout",
                        "editText",
                        "form",
                        "header",
                        "horizentalLayout",
                        "imageButton",
                        "sideBar",
                        "text",
                        "verticalLayout"
                    ]
                },
                "styles": {
                    "type": "object",
                    "additionalProperties": true
                },
                "children": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/component"
                    }
                },
                "params": {
                    "type": "object",
                    "additionalProperties": true
                }
            }
        }
    }
}